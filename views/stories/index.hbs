<h1>Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h4>{{title}}</h4>
          <p>{{stripTags (truncate body 100)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="userImg">
            <a href="/stories/user/{{user._id}}">{{user.firstName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/stories/{{_id}}" class="btn grey">Read More...</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No Stories to Display</p>
  {{/each}}
</div>
