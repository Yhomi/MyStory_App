<h1>Dashboard</h1>

<h5>Welcome {{name}}</h5>
<p>Here are your list of stories</p>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td> <a href="/stories/{{_id}}">{{title}}</a> </td>
          <td>{{formatDate created_at 'MMM Do YYYY,h:mm:ss a'}}</td>
          <td> <span class="dash-status">{{status}}</span> </td>
          <td>
            <a href="/stories/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form id="delete-form" action="/stories/delete/{{_id}}" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" name="button" class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not created any stories</p>

{{/if}}
