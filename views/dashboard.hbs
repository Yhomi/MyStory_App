<h1>Dashboard</h1>

<h5>Welcome {{name}}</h5>
<p>Here are your list of stories</p>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td> <a href="/stories/{{_id}}">{{title}}</a> </td>
          <td>{{created_at}}</td>
          <td> <span class="dash-status">{{status}}</span> </td>
          <td></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not created any stories</p>

{{/if}}
